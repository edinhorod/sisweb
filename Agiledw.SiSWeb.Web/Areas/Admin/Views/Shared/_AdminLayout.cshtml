<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Administrativo</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/ErroEstilo.css" rel="stylesheet" />


    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <header>
        <!--DADOS DA AGILEDW-->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <strong>Email: </strong>agiledw@agiledw.com.br
                    &nbsp;&nbsp;
                    <strong>Support: </strong>+90-897-678-44
                </div>
            </div>
        </div>
        <!--FIM DADOS AGILEDW-->
    </header>
    <!-- HEADER END-->
    <!--INICIO LOGO-->
    <div class="navbar navbar-inverse set-radius-zero">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">
                    <img width="30%" src="http://agiledw.com.br/sisweb/imgs/icone.png" />
                </a>
            </div>

            <div class="left-div">
                <div class="user-settings-wrapper">
                    <ul class="nav">

                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="true">
                                <span class="glyphicon glyphicon-user" style="font-size: 25px;"></span>
                            </a>

                            <div class="dropdown-menu dropdown-settings">
                                <div class="media">
                                    <a class="media-left" href="#">
                                        <img src="~/Areas/Admin/ImgUsers/64-64.jpg" alt="" class="img-rounded" />
                                    </a>
                                    <div class="media-body">
                                        <h4 class="media-heading">Jhon Deo Alex </h4>
                                        <h5>Developer & Designer</h5>
                                    </div>
                                </div>
                                <hr />
                                <h5><strong>Personal Bio : </strong></h5>
                                Anim pariatur cliche reprehen derit.
                                <hr />
                                <a href="#" class="btn btn-info btn-sm">Full Profile</a>&nbsp; <a href="login.html" class="btn btn-danger btn-sm">Logout</a>
                            </div>
                        </li>


                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- FIM LOGO-->
    <!--INICIO MENU-->
    <section class="menu-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="navbar-collapse collapse ">
                        <ul id="menu-top" class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Home", "Index", new { area = "Admin", controller = "Home" }) </li>
                            <li>@Html.ActionLink("Administradores", "Index", new { area = "Admin", controller = "Administradores" })</li>
                            <li><a href="table.html">Data Tables</a></li>
                            <li><a href="forms.html">Forms</a></li>
                            <li><a href="login.html">Login Page</a></li>
                            <li><a href="blank.html">Blank Page</a></li>

                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!--FIM MENU-->
    <!--CONTEUDO DA PÁGINA-->
    <div class="content-wrapper">
        <div class="container">

            <!--CONTEUDO DA PAGINA-->
            <div class="row">
                <div class="col-md-12">
                    @if (TempData["mensagem"] != null)
                    {
                        <div id="mensagem" class="alert alert-success">@TempData["mensagem"]</div>
                    }
                    @RenderBody()
                </div>
            </div>
            <!--CONTEUDO DA PAGINA-->


        </div>
    </div>
    <!--FIM CONTEUDO DA PAGINA-->
    <!--INICIO RODAPE-->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    &copy; @DateTime.Now.Year <a href="http://www.agiledw.com.br/" target="_blank">AGILEDW - Desenvolvimento Web</a>
                </div>

            </div>
        </div>
    </footer>
    <!--FIM RODAPE-->

    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>